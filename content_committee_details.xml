<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_committee_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.myfirstapp.CommitteeDetails"
    tools:showIn="@layout/activity_committee_details"
    android:orientation="vertical">

    <CheckBox

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/checkBox"


        android:button="@drawable/favitem"
        android:gravity="right"
        android:layout_gravity="right"/>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="Committee ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:text="Chamber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:text="Parent Committee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:text="Contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:text="Office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c1"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_gravity="right"/>

            <TextView
                android:text="TextView"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/c2"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="right"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c3"
                android:layout_weight="1"
                android:layout_gravity="right"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c4"
                android:layout_weight="1"
                android:layout_gravity="right"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c5"
                android:layout_weight="1"
                android:layout_gravity="right"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c6"
                android:layout_weight="1"
                android:layout_gravity="right"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
